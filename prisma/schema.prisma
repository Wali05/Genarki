generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  clerkId    String   @unique
  email      String   @unique
  name       String?
  company    String?
  bio        String?
  avatarUrl  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  ideas      Idea[]
}

model Idea {
  id              String     @id @default(uuid())
  title           String
  description     String
  validationScore Float?     @default(7.0)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  userId          String
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  blueprint       Blueprint?
}

model Blueprint {
  id          String   @id @default(uuid())
  ideaId      String   @unique
  idea        Idea     @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  validation  Json?
  features    Json?
  techStack   Json?
  pricingModel Json?
  userFlow    String?
  tasks       Json?
  progress    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
